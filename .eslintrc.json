{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "rules": {
    "func-names": ["off"],
    "no-await-in-loop": ["off"],
    "no-restricted-syntax": ["off"],
    "no-continue": ["off"],
    "max-len": ["warn", 120]
  }
}
